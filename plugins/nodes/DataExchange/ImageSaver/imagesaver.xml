<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="ImageSaver" category="Export" color="255, 200, 0" plugin="imagesaver.dll">
  <parameters>
    <parameter name="Image 1" type="Image" pin="in"/>
    <parameter name="Image 2" type="Image" pin="in"/>
    <parameter name="Image 3" type="Image" pin="in"/>
    <parameter name="Image 4" type="Image" pin="in"/>
    <parameter name="File Format" type="Enumeration" defaultValue="PNG">
      <literal name="PNG" value=".png"/>
      <literal name="JPEG" value=".jpg"/>
      <literal name="EXR" value=".exr"/>
    </parameter>
    <parameter name="Offset" type="Int" inputMethod="SliderPlusSpinBox" minValue="-10000" maxValue="10000" defaultValue="0"/>
    <parameter name="Filename 1" type="Filename"/>
    <parameter name="Filename 2" type="Filename"/>
    <parameter name="Filename 3" type="Filename"/>
    <parameter name="Filename 4" type="Filename"/>
    <parameter name="Save Current Frame" type="Command"/>
  </parameters>
</nodetype>


