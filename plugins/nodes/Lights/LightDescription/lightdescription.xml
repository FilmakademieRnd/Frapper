<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="LightDescription" category="Lights" color="255, 255, 109" plugin="lightdescription.dll">
  <parameters>
    <parameter name="Light Description File" type="Filename" filter="Light Description Files (*.txt)"/>
		<parameter name="Number of Lights" type="TextInfo"/>
    <parameter name="Light Power" type="Float" inputMethod="SliderPlusSpinBox" minValue="0.01" maxValue="100" defaultValue="0.3" stepSize="0.01"/>
    <parameter name="Set Number of Lights" type="Int" inputMethod="SliderPlusSpinBox" minValue="1" maxValue="16" defaultValue="3" stepSize="1"/>
  </parameters>
</nodetype>
