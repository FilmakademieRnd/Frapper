<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="ImageFilter" category="Images" color="173, 255, 173" plugin="imagefilter.dll">
  <parameters>
    <parameter name="Image to Filter" type="Image" pin="in"/>
    <parameters name="Color Correction">
      <parameter name="Red" type="Int" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" defaultValue="0" unit="%"/>
      <parameter name="Green" type="Int" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" defaultValue="0" unit="%"/>
      <parameter name="Blue" type="Int" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" defaultValue="0" unit="%"/>
      <parameter name="Alpha" type="Int" inputMethod="SliderPlusSpinBox" minValue="-100" maxValue="100" defaultValue="0" unit="%"/>
      <parameter name="Reset" type="Command" />
    </parameters>
  </parameters>
</nodetype>
