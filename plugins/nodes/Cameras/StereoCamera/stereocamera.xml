<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="StereoCamera" category="Cameras" color="173, 255, 173" plugin="stereocamera.dll">
  <parameters>
	<parameters name="Stereo">
      <parameter name="Eye Distance" type="Float" defaultValue="0.3" stepSize="0.1"/>
      <parameter name="Reverse Stereo" type="Bool" />
      <parameter name="Frustum Offset Multiplier" type="Float" defaultValue="1.0"/>
      <parameter name="Focal Length" type="Float" defaultValue="24.0" pin="out"/>
      <parameter name="Field of View" type="Float" defaultValue="66.0" minValue="0" maxValue="179,99" pin="out"/>
  </parameters>
  </parameters>
</nodetype>