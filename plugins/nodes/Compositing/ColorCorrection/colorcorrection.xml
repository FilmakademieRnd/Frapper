<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="ColorCorrection" category="Compositing" color="185, 30, 75" plugin="colorcorrection.dll">
  <parameters>
    <parameter name="Resource Group Name" type="String" defaultValue="ColorCorrectionNode"/>
    <parameter name="Reload" type="Command"/>    
    <parameter name="Input Map" type="Image" pin="in" selfEvaluating="true"/>
    <parameter name="Output Pixel Format" type="Enumeration" defaultValue="Float16">
      <literal name="ARGB8" value="RGBA8"/>
      <literal name="Float16" value="Float16"/>
    </parameter>
  </parameters>
</nodetype>


