<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="MultiBlend" category="Compositing" color="185, 30, 75" plugin="compositortemplate.dll">
  <parameters>
    <parameter name="Compositor Name" type="String" defaultValue="MultiBlendCompositor"/>
    <parameter name="Resource Group Name" type="String" defaultValue="MultiBlendShader"/>
    <parameter name="Reload" type="Command"/>
    <parameters name="Input Maps">
      <parameter name="Input Map 0" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 1" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 2" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 3" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 4" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 5" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 6" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 7" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 8" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 9" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 10" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 11" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 12" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 13" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 14" type="Image" pin="in" selfEvaluating="false"/>
      <parameter name="Input Map 15" type="Image" pin="in" selfEvaluating="false"/>
    </parameters>
    <parameters name="Shader Parameters Pass 0">
      <parameter name="ImageIndex" type="Float" pin="in" inputMethod="SliderPlusSpinBox" defaultValue="0.0" minValue="0.0" maxValue="15" stepSize="1.0" selfEvaluating="true"/>
      
    </parameters>
  </parameters>
</nodetype>


