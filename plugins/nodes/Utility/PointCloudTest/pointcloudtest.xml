<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="PointCloudTest" category="Utility" color="255, 192, 171" plugin="PointCloudTest.dll">
  <parameters>
    <parameter name="Animate" type="Float" minValue="0.0" maxValue="100.0" defaultValue="0.0" inputMethod="SliderPlusSpinBox" stepSize="1.0"/>
    <parameter name="MaxNumberOfPoints" type="Int" minValue="0" maxValue="1000000" defaultValue="1000" inputMethod="SpinBox"/>
    <parameter name="MinNumberOfPoints" type="Int" minValue="0" maxValue="1000000" defaultValue="500" inputMethod="SpinBox"/>
    <parameter name="AllowShrinkAndGrow" type="Bool" defaultValue="false"/>
  </parameters>
</nodetype>
