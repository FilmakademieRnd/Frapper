<!DOCTYPE nodetype SYSTEM "nodetype.dtd">
<nodetype name="Index2Viseme" category="Utility" color="255, 192, 171" plugin="index2viseme.dll">
  <parameters>
    <parameter name="Number of Parameters" type="Int" defaultValue="1" minValue="0" maxValue="22" inputMethod="SliderPlusSpinBox"/>
    <parameter name="Transitions speed"    type ="Float" defaultValue="98.0" minValue="50.0" maxValue="100.0" inputMethod="SliderPlusSpinBox" />
    <parameter name="Index Normalized"     type="Float" defaultValue="0.0" minValue="0.0" maxValue="15.0" pin="out"/>
    <parameter name="Viseme"               type="String" defaultValue="" pin="out"/>
    
  </parameters>
</nodetype>
