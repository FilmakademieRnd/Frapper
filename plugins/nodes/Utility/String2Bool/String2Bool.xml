<!DOCTYPE nodetype SYSTEM "../../../nodetype.dtd">
<nodetype name="String2Bool" category="Utility" color="250,100,50" plugin="string2bool.dll">
  <parameters>
    <parameter name="Description" type="TextInfo" defaultValue="If intput string equals manually created output strings trigger corresponding bool output."/>
    <parameter name="Signal In" type="String" pin="in" visible="true" defaultValue="" selfEvaluating="true"/>        
    <parameter name="Number of Outputs" type="Int" defaultValue="11" selfEvaluating="true"/>
    <parameter name="Clean Output after 500ms" type="Bool" defaultValue="true" selfEvaluating="true"/>
    <parameter name="Clean All Outputs except triggered at once" type="Bool" defaultValue="false" selfEvaluating="true" description="clean all outputs, except the one that was activated"/>
    <parameter name="Clean All Outputs except triggered after 500ms" type="Bool" defaultValue="false" selfEvaluating="true"/>
    <parameters name="Outputs">
    </parameters>   
  </parameters>	
</nodetype>
