fragment_program UnsharpMask/DownscaleFragmentProgram glsl
{
	source downscale.frag
	
	default_params
	{
		param_named inputMap int 0
	}
}

fragment_program UnsharpMask/SmoothHorizontalFragmentProgram glsl
{
	source smoothHorizontal.frag
	
	default_params
	{
		param_named inputMap int 0
		param_named pixelSize float4 1.0 1.0 0.0 0.0
		param_named domainRadius float 4.0
	}
}

fragment_program UnsharpMask/SmoothVerticalFragmentProgram glsl	
{
	source smoothVertical.frag
	
	default_params
	{
		param_named inputMap int 0
		param_named pixelSize float4 1.0 1.0 0.0 0.0
		param_named domainRadius float 4.0
	}
}

fragment_program UnsharpMask/UnsharpMaskFragmentProgram glsl
{
	source unsharpmask.frag
	
	default_params
	{
		param_named inputMap int 0
		param_named indicationMap int 1
		param_named pixelSize float4 1.0 1.0 0.0 0.0
	}
}

vertex_program UnsharpMask/QuadVertexProgram glsl
{
	source quad.vert
}



material UnsharpMask/DownScale
{
	technique
	{
		pass
		{
			depth_check off

			fragment_program_ref UnsharpMask/DownscaleFragmentProgram
			{
			}

			vertex_program_ref UnsharpMask/QuadVertexProgram
			{
			}
		
			texture_unit	//(inputMap)
			{
                tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}
		}
	}
}


material UnsharpMask/SmoothHorizontal
{
	technique
	{
		pass
		{
			depth_check off

			fragment_program_ref UnsharpMask/SmoothHorizontalFragmentProgram
			{
			}
			
			vertex_program_ref UnsharpMask/QuadVertexProgram
			{
			}
	
			texture_unit	//(downScaleMap)
			{
				tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}
		}
	}
}

