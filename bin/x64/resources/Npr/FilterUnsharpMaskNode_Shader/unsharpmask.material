material UnsharpMask/UnsharpMaskMaterial
{
	technique
	{
		pass
		{
			depth_check off

			fragment_program_ref UnsharpMask/UnsharpMaskFragmentProgram
			{
			}
			
			vertex_program_ref UnsharpMask/QuadVertexProgram
			{
			}	
			
			texture_unit	//(inputMap)
			{
                tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}
			
			texture_unit	//(smoothMap1)
			{
                tex_coord_set 0
				tex_address_mode clamp
				filtering linear linear linear
			}
		}
	}
}
