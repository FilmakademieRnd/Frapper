compositor Depth2StereoCompositor
{
	technique
    {
		texture rt_color target_width target_height PF_R8G8B8A8
		texture rt_depth target_width target_height PF_L16

		target rt_color
		{
			input none
			pass render_quad
			{
				material Depth2Stereo/ColorPass
			}
		}

		target rt_depth
		{
			input none
			pass render_quad
			{
				material Depth2Stereo/DepthPass
			}
		}

        target_output
        {
            input none
            pass render_quad
            {
				identifier 0
				material Depth2Stereo/Depth2StereoMaterial
				input 0 rt_color
            	input 1 rt_depth
            }
        }
    }
}
